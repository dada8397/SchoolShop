<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.schoolshop">
    
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.schoolshop.ListActivity"
            android:label="@string/label_activity_list" />
        <activity
            android:name="com.example.schoolshop.CreateActivity"
            android:label="@string/label_activity_create" />
        <activity
            android:name="com.example.schoolshop.DetailActivity"
            android:label="@string/label_activity_detail" />
        <activity
            android:name="com.example.schoolshop.ChatActivity"
            android:label="@string/label_activity_chat" />
    </application>
    <uses-permission android:name="android.permission.INTERNET"/>


</manifest>